.citation-author-text {
    display: block;
    width: 100%;
    text-align: right;
    font-weight: bold;
    margin-top: -20px;
}

// hide file name provided by the user in favor of direct link download
.highlight figcaption > span {
    display: none;
}

// move the direct link download to the left
.highlight figcaption > a {
    float: left;
}

