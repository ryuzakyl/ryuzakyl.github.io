.citation-author-text {
    display: block;
    width: 100%;
    text-align: right;
    font-weight: bold;
    margin-top: -20px;
}

// hide file name provided by the user in favor of direct link download
.highlight figcaption > span {
    display: none;
}

// move the direct link download to the left
.highlight figcaption > a {
    float: left;
}

.highlight figcaption:after {
    content: "â‡©";
    display: inline-block;
    margin-left: 3px;
    margin-top: 2px;
    // cursor: pointer;
}

.copy-btn {
    margin-top: 40px;
    margin-right: 10px
    background-color: transparent;

    background-image: url(/assets/images/shared/copy-solid.svg);  /* shows image */
    background-repeat: no-repeat;
    height: 15px;
    width:  15px;

    /* Hide the text. */
    text-indent: 50px;
    white-space: nowrap;
    overflow: hidden;
}